\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mathdefs}
\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{amsthm}
\RequirePackage{siunitx}
\RequirePackage{smatrix}
\RequirePackage{mathtools}
\RequirePackage{xstring}

% Theorem Environments

\newtheorem{theorem}{Theorem}
\newtheorem{lemma}{Lemma}
\newtheorem{proposition}{Proposition}

% Paired Delimiters

\DeclarePairedDelimiter{\abs}{\lvert}{\rvert}
\DeclarePairedDelimiter{\norm}{\lVert}{\rVert}

% Algebra Definitions

\newcommand{\field}[1]{\mathbb{#1}}
\newcommand{\realf}[1]{\IfEq{#1}{1}{\field{R}}{\field{R}^{#1}}}
\newcommand{\complexf}[1]{\IfEq{#1}{1}{\field{C}}{\field{C}^{#1}}}
\newcommand{\integerg}[1]{\IfEq{#1}{1}{\field{Z}}{\field{Z}^{#1}}}

% Linear Algebra Definitions

\newcommand{\vecspace}[1]{\mathsf{#1}}
\newcommand{\lint}[1]{\mathsf{#1}}
\newcommand{\range}{\mathsf{R}}
\newcommand{\kernel}{\mathsf{NS}}
\newcommand{\rank}{\mathrm{rank}}
\newcommand{\nullity}{\mathrm{nullity}}
\newcommand{\spec}[1]{\mathrm{Sp}_{#1}}
\newcommand{\trans}[1]{#1^{t}}

\newcommand{\eigenspace}[1]{\mathsf{E}_{#1}}
\newcommand{\matrixspace}[2]{\mathsf{M}^{#1\times#2}}
\newcommand{\tuplespace}[1]{\mathsf{F}^{#1}}

\newcommand{\diag}{\mathrm{diag}}
